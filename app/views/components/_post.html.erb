
    <div class="panel panel-default post-panel">
            <div class="row">
                <div class='col-sm-12'>
                    <% if @p.content.match(/pray/i) %>
                      <p class='post-type' style="background-color: rgba(199,91,91,0.85)">PRAYER</p>
                      <% elsif @p.content.match(/praise/i)  %>
                      <p class='post-type' style="background-color:#1ac9c9;">PRAISE</p>
                      <% end %>
                    
                </div>
            </div>
          <div class="panel-body row">
              <div class='col-sm-2'>
                  <center><a href="/@<%=current_user.username%>"><img src="<%= User.find(@p.user_id).avatar.url(:thumb) %>" height="50px" width="50px" style="border-radius:50%;border:2px solid #1ac9c9"></img></a></center>
              </div>
              <div class="col-sm-7">
                  <a style="color:#1ac9c9" href="/@<%= User.find(@p.user_id).username %>" class='post-title'><strong><%= User.find(@p.user_id).display_name %></strong>  &nbsp;<span style="font-size:10px">@<%= User.find(@p.user_id).username %></span></a>
                  <a href="/post/<%= @p.id %>"><p class='post-content'><%= @p.content %></p></a>
              </div>
               <div class="col-sm-3">
                  <p class="post-date"><%= distance_of_time_in_words(@p.created_at,Time.now) %> ago</p>
              </div>
              </div>
              <div class="row" style="padding:10px;padding-top:0;margin-bottom:20px;top:0">
              <div class="col-sm-2"></div>
              <div class="col-sm-10">
                 <%= render '/components/post_links' %>
              </div>
             
            
          </div>
        </div>