<div class="post-container">
          <div>
              <center><h1>Who to follow:</h1></center>
              
              <% for @u in @users do %>
               <div class="row">
                   <div class="col-sm-3">
                       
                   </div>
                   <div class ="col-sm-6">
                       <div>
                   <div class="col-sm-3">
                   <center><a href="/@<%= @u.username %>"><img src="<%= @u.avatar.url(:small) %>" style="width:50px;height:50px;border-radius:50%;margin-top:15px;margin-left:15px;"/></a></center>
                   </div>
                   <div class="col-sm-9">
                       <center><a href="/@<%= @u.username %>"><h1 style="font-size:120%;color:#000"><%= @u.display_name %>&nbsp;&nbsp;<span style="font-size:10px" class="tag">@<%= @u.username %></span></h1></a>
                      <% if !current_user.following?(@u) %>
                      <%= form_for(current_user.active_relationships.build, remote: true) do |f| %>
                                            <div><%= hidden_field_tag :followed_id, @u.id %></div>
                                            <%= f.submit "FOLLOW", class: "btn btn-primary" %>
                                        <% end %>
                                    <% else %>
                                        <%= form_for(current_user.active_relationships.find_by(followed_id: @u.id),
                                            html: { method: :delete }) do |f| %>
                                            <%= f.submit "UNFOLLOW", class: "btn btn-secondary" %>
                                        <% end %>
                                    <% end %>
                       </center>
                   </div>
                  </div>
                   </div>
                   <div class="col-sm-3"></div>
                   
               </div>
                  <center>
                      <div class="divider" style="width:50%;height:1px;margin-bottom:10px;margin-top:10px;"></div>
                  </center>
               <% end %>
               </div>
               </div>