<style>
    #list{
        transition: all 0.3s ease;
    }
</style>



<div class="post-links" style="margin-bottom:30px">
                      <% if @p.post_type == "Prayer"  %>
                      <%= link_to "&nbsp;&nbsp;&nbsp;🙏 &nbsp;<span class='action-count'>#{@p.get_upvotes.size}</span>".html_safe, like_post_path(@p), :id => "b", :confirm => "Are you sure?", :method => :put, :class =>"pray-button", :style => "color:#000; margin-top:10px;" %>
                      
                      <span><a class="pray-button" href="/post/<%= @p.id %>"><span style="padding:7px;padding-left:10px;padding-right:10px;"><span class="glyphicon glyphicon-comment"></span></span><span class="action-count"><%= Comment.where(post_id: @p.id).count %></span></a></span>
                      <% elsif @p.post_type == "Praise"  %>
                      <%= link_to "&nbsp;&nbsp;&nbsp;🙌 &nbsp;<span class='action-count-praise'>#{@p.get_upvotes.size}</span>".html_safe, like_post_path(@p), :id => "a", :confirm => "Are you sure?", :method => :put, :class =>"praise-button", :style => "color:#000; margin-top:10px;" %>
                      <span><a class="praise-button" href="/post/<%= @p.id %>"><span style="padding:7px;padding-left:10px;padding-right:10px;"><span class="glyphicon glyphicon-comment"></span></span><span class="action-count-praise"><%= Comment.where(post_id: @p.id).count %></span></a></span>
                      <% else %>
                      <span><a class="update-button" href="/post/<%= @p.id %>"><span style="padding:7px;padding-left:10px;padding-right:10px;"><span class="glyphicon glyphicon-comment"></span></span><span class="action-count-update"><%= Comment.where(post_id: @p.id).count %></span></a></span>
                    
                     
                      
                      <% end %>
                </div>
                
    <div id="list" style="margin-top:30;margin-bottom:0px;opacity:0;height:0px">
    <% for @u in @p.get_upvotes do %>
        <% @user = User.find(@u.voter_id) %>
        <img alt="Brand" src="<%= @user.avatar.url(:thumb) %>" style="height:100%;width:auto;border-radius:50%;">
    <% end %>
</div>
                
                <script>
                    $(document).ready(function(){
     $("#a").mouseover(function(){
         $("#list").css("opacity", "1");
         $("#list").css("height", "32px");
     });
     $("#a").mouseout(function(){
         $("#list").css("opacity", "0");
         $("#list").css("height", "0px");
     });
     $("#b").mouseover(function(){
         $("#list").css("opacity", "1");
         $("#list").css("height", "32px");
     });
     $("#b").mouseout(function(){
         $("#list").css("opacity", "0");
         $("#list").css("height", "0px");
     });
});
                </script>