<%= form_for([Post.find(@post), Post.find(@post).comments.build]) do |f|  %>
  <div class="panel panel-default post-panel">
  <div class="panel-body row" style="padding-top:0px;padding-bottom:0px;">
    <div class="col-xs-10" style="padding:0">
    <%= f.text_area :content, autofocus: true, :class => "noOutline", :style => "width:98%;height:60px;border:none;padding:10px 20px;padding-bottom:0px;resize:none;font-size:2rem", :placeholder => "Drop a comment..." %>
    </div>
     <div class="col-xs-2" style="padding:0;">
  <%= f.submit "<span class='glyphicon glyphicon-send'><span>".html_safe, :class => "post-btn", :style => "height:70px;font-size:1.45rem" %>
  </div>
  </div>
  </div>

<% end %>