<style>
    body {
        background:url("/bg5.jpg") no-repeat center center fixed;
        
        -webkit-background-size: cover;
        -moz-background-size: cover;
        -o-background-size: cover;
        background-size: cover;
    }
</style>

<%= render '/layouts/nav_user' %>

<div class="container">
    <div class="post-container">
    <div class="row">
                <div class='col-sm-12'>
                    <% if Post.find(@post).content.match(/pray/i) %>
                      <p class='post-type' style="background-color: rgba(199,91,91,0.85)">PRAYER</p>
                      <% elsif Post.find(@post).content.match(/praise/i)  %>
                      <p class='post-type' style="background-color:#1ac9c9;">PRAISE</p>
                      <% end %>
                    
                </div>
            </div>
    <div class="panel-body row">
        <div class="col-sm-2"><center>
            <a href="/@<%= User.find(Post.find(@post).user_id).username %>"><img class="profilePic raised rounded" style="width:100px;height:100px;margin-bottom:20px;" src="<%= User.find(Post.find(@post).user_id).avatar.url(:small) %>"></a>
            <a href="/@<%= User.find(Post.find(@post).user_id).username %>" style="color:#1ac9c9"><p style="font-weight:500;font-size:20px;"><%= User.find(Post.find(@post).user_id).display_name %></p><p style="font-weight:320;font-size:14px;">@<%= User.find(Post.find(@post).user_id).username %></p></a>
        </center>
        </div>
        <div class="col-sm-9">
            <p style="font-weight:500;font-size:20px;padding:20px;"><%= Post.find(@post).content %></p>
            <% @arr.each do |hashtag| %>
    <a href="/search/posts/<%= hashtag.tr("#", "") %>"><span class="tag"><%= hashtag %></span></a>
<% end %>
        </div>
        <div class="col-sm-1">
            <% if Post.find(@post).user_id == current_user.id %>
                <center><%= link_to "", post_path(@post), :confirm => "Are you sure?", :method => :delete, :class =>"glyphicon glyphicon-trash", :style => "color:#000; margin-top:10px;" %></center>
            <% end %>
        </div>
        <div class="row">
             
              <center>
              <div class="col-sm-12" style="margin-top:10px;">
                  <%= render '/components/post_links' %>
              <p class="post-date" style="margin-top:20px;"><%= distance_of_time_in_words(@p.created_at,Time.now) %> ago</p>
              </div>
             </center>
            
          </div>
          
              </div>
</div>

<%= render '/comments/form' %>

<% @comments.each do |comment| %>
    <div class="post-container" style="padding:10px;">
          <div class="panel-body row">
              <div class='col-sm-2'>
                  <center><a href="/@<%=current_user.username%>"><img src="<%= comment.user.avatar.url(:thumb) %>" style="height:70px" class="rounded" ></img></a></center>
              </div>
              <div class="col-sm-7">
                  <a style="color:#1ac9c9" href="/@<%= comment.user.username %>" class='post-title'><strong><%= comment.user.display_name %></strong>  &nbsp;<span style="font-size:10px" class="tag">@<%= comment.user.username %></span></a>
                  <p class="post-content wrapword"><%= comment.content %></p>
              </div>
               <div class="col-sm-3">
                  <p class="post-date"><%= distance_of_time_in_words(comment.created_at,Time.now) %> ago</p>
                  <% if current_user == comment.user %>
                  <%= link_to "", [comment.post, comment], method: :delete, :class =>"glyphicon glyphicon-trash", :style => "color:#000; position: absolute; right:60px;margin-top:25px;" %>
                  <% end %>
              </div>
              </div>
        </div>
        
<% end %>
</div>




    <script>
    document.title = '"<%= @p.content %>" | Unafire'
    
</script>